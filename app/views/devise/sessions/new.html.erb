<div class="zhou-content" >

<div class="devise-panel" >
<h2>欢迎使用本系统</h2>

<%= form_for(resource, as: resource_name,  url: session_path(resource_name),:html=>{ :class=>'am-form'}) do |f| %>

      <% flash.each do |key, value| %>
          <%if key!="notice" %>
              <div class="alert alert-<%= key %> alert-danger">
                <a href="#" data-dismiss="alert" class="close">×</a>
                <%= value %>
              </div>
          <%end %>
      <% end %>
  <div class="field">
    <%= f.label :邮箱 %><br />
    <%= f.email_field :email, autofocus: true ,:class=>'form-control'%>
  </div>

  <div class="field">
    <%= f.label :密码 %><br />
    <%= f.password_field :password, autocomplete: "off" ,:class=>'form-control'%>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="am-radio">
      <%= f.check_box :remember_me %>
      <%= f.label :记住我%>
    </div>
  <% end -%>

  <div class="actions">
    <%= f.submit "登陆" ,:class=>"btn btn-primary" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>
  <div style="clear: both"></div>
</div>

<div class="zhou-content">
<div class="devise-panel">

<h2>注册</h2>

<%= form_for( resource,as: resource_name, url: registration_path(resource_name),:html => {:class => 'am-form'} ) do |f|  %>
  <%= devise_error_messages! %>

  <div class="form-group">
    <%= f.label :电子邮件 %><br />
    <%= f.email_field :email, autofocus: true ,:class=>'form-control'%>
  </div>


  <div class="form-group">
    <%= f.label :密码 %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> 位最小)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off",:class=>'form-control'%>
  </div>

  <div class="form-group">
    <%= f.label :确认密码 %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off",:class=>'form-control'%>
  </div>

  <div class="actions">
    <%= f.submit "注册"  ,:class=> 'btn btn-primary'%>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>

</div>